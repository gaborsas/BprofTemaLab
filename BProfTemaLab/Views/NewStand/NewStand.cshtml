@model BProfTemaLab.Dal.Dtos.StandDto
@{
    ViewData["Title"] = "NewStand";
}
<form id="new-stand-form" method="post" asp-action="AddStand">
    <div>
        <h2>Új stand</h2>
        <div class="form-group">
            <label style="width: 200px">Termék:</label>
            @Html.DropDownList("productId", (List<SelectListItem>)ViewBag.MySkills, new { style = "width: 200px; display:inline-block;", @class = "form-control" })
        </div>
        <div class="form-group">
            <label style="width: 200px; vertical-align: top;">Vett:</label>
            <input type="number" name="purchased" class="form-control" style="width: 200px; display:inline-block;" />
        </div>
        <div class="form-group">
            <label style="width: 200px">Eladott:</label>
            <input type="number" name="sold" class="form-control" style="width: 200px; display:inline-block;" />
        </div>
        <div class="form-group">
            <label style="width: 200px">Összetört:</label>
            <input type="number" name="scrap" class="form-control" style="width: 200px; display: inline-block;" />
        </div>
        <div>
            <button type="button" class="btn btn-secondary">Vissza</button>
            <button type="submit" class="btn btn-primary">Mentés</button>
        </div>
    </div>
</form>

