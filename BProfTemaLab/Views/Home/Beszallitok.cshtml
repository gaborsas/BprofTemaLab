
@{
    ViewData["Title"] = "Beszallitok";
}

<div class="container">
    <h2>Beszállítók <span class="glyphicon glyphicon-plus-sign align-top" style="cursor: pointer" title="Új beszállító felvétele"></span></h2>
    <input class="form-control" id="myBeszallitoInput" type="text" placeholder="Search..">

    <div id="myBeszallitoTable" class="mt-2 border border-dark">
        <div class="border bg-light" style="height:40px;">
            <div class="m-2">
                <div class="font-weight-bold" style="display:inline-block; font-size:20px;">
                    <span id="show" class="glyphicon glyphicon-menu-right" style="cursor: pointer"></span>
                    <span id="hide" class="glyphicon glyphicon-menu-down" style="cursor: pointer"></span>
                    CocaCola - (06-30-1234-567)
                </div>
            </div>
        </div>
        <div id="myTermekTable">
            <div id="TermekKereses" class="font-weight-bold m-2" style="font-size:16px;">
                <span class="align-middle">Termékek</span>
                <span class="glyphicon glyphicon-plus-sign align-middle" style="cursor: pointer" title="Új termék felvétele"></span>
                <input style="width:200px; display:inline-block;" class="form-control" id="myTermekInput" type="text" placeholder="Search..">
            </div>
            <table class="table table-bordered table-striped mb-0">
                <thead>
                    <tr>
                        <th>Név</th>
                        <th>Egység Ár</th>
                        <th>üveg/rekesz</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <tr>
                        <td>Soproni 1895</td>
                        <td>550 FT/üveg</td>
                        <td>20 üveg/rekesz</td>
                    </tr>
                    <tr>
                        <td>Soproni klasszukus</td>
                        <td>530 FT/üveg</td>
                        <td>20 üveg/rekesz</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="border bg-light" style="height:40px;">
            <div class="m-2">
                <div class="font-weight-bold" style="display:inline-block; font-size:20px;">
                    <span id="show" class="glyphicon glyphicon-menu-right" style="cursor: pointer"></span>
                    Soproni - (06-20-1234-567)
                </div>
            </div>
        </div>
        <div class="border bg-light" style="height:40px;">
            <div class="m-2">
                <div class="font-weight-bold" style="display:inline-block; font-size:20px;">
                    <span id="show" class="glyphicon glyphicon-menu-right" style="cursor: pointer"></span>
                    Sörgyár - (06-70-1234-567)
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#myBeszallitoInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myBeszallitoTable div").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

          $("#myTermekInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $("#myTermekTable").hide();
        $("#TermekKereses").hide();
        $("#hide").hide();
        $("#show").show();

        $("#hide").click(function () {
            $("#myTermekTable").hide();
            $("#TermekKereses").hide();
            $("#hide").hide();
            $("#show").show();
        });
        $("#show").click(function () {
            $("#myTermekTable").show();
            $("#TermekKereses").show();
            $("#hide").show();
            $("#show").hide();
        });
    });


</script>