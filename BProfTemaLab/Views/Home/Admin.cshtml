@model IEnumerable<BProfTemaLab.Dal.Entities.User>
@{
    ViewData["Title"] = "Admin";
}

<div class="container">
    <h2>Felhasználó kezelés <span class="glyphicon glyphicon-plus-sign align-top" style="cursor: pointer" title="Új felhasználó felvétele"></span></h2>
    <input class="form-control" id="myInput" type="text" placeholder="Search..">
    <br>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Név</th>
                <th>E-mail</th>
                <th>Beosztás</th>
            </tr>
        </thead>
        <tbody id="myTable">

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                </tr>

            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>





