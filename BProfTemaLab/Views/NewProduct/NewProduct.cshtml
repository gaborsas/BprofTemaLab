@model BProfTemaLab.Dal.Dtos.ProductDto
@{
    ViewData["Title"] = "NewProduct";
}
<form id="new-product-form" method="post" asp-action="AddProduct">
    <div>
        <h2>Új termék</h2>
        <div class="form-group">
            <label style="width: 200px">Beszállító:</label>
            @Html.DropDownList("supplierId", (List<SelectListItem>)ViewBag.MySkills,  new { style = "width: 200px; display:inline-block;", @class = "form-control" })
        </div>
        <div class="form-group">
            <label style="width: 200px; vertical-align: top;">Termék neve:</label>
            <input type="text" name="name" class="form-control"  style="width: 200px; display:inline-block;"/>
        </div>
        <div class="form-group">
            <label style="width: 200px">Egység ár:</label>
            <input type="number" name="unitPrice" class="form-control" style="width: 200px; display:inline-block;" />
        </div>
        <div class="form-group">
            <label style="width: 200px">Mennyiség:</label>
            <input type="number" name="quantity" class="form-control" style="width: 200px; display: inline-block;" />
        </div>
        <div>
            <button type="button" class="btn btn-secondary">Vissza</button>
            <button type="submit" class="btn btn-primary">Mentés</button>
        </div>
    </div>
</form>

