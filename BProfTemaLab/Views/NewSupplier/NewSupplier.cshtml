@model BProfTemaLab.Dal.Entities.Product

@{
    ViewData["Title"] = "NewSupplier";
}

<form id="new-˛supplier-form" method="post" asp-action="AddSupplier">
    <div>
        <h2>Új beszállító</h2>
        <div class="form-group">
            <label style="width: 200px">Beszállító neve:</label>
            <input type="text" name="name" class="form-control" style="width: 200px; display:inline-block;" />
        </div>
        <div class="form-group">
            <label style="width: 200px">Telefonszám:</label>
            <input type="text" name="phoneNumber" class="form-control" style="width: 200px; display:inline-block;" />
        </div>
        <div class="form-group">
            <label style="width: 200px">E-mail:</label>
            <input type="text" name="email" class="form-control" style="width: 200px; display:inline-block;" />
        </div>
        <div class="form-group">
            <label style="width: 200px">Cím:</label>
            <input type="text" name="address" class="form-control" style="width: 200px; display:inline-block;" />
        </div>
        <div>
            <button type="button" class="btn btn-secondary">Vissza</button>
            <button type="submit" class="btn btn-primary">Mentés</button>
        </div>
    </div>
</form>
