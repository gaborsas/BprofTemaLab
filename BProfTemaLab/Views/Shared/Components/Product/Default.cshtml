@model IEnumerable<BProfTemaLab.Dal.Dtos.ProductDto>

<h2>Termékek <span class="glyphicon glyphicon-plus-sign align-top" style="cursor: pointer" title="Új termék felvétele"></span></h2>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<br>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Név</th>
            <th>Beszállító</th>
            <th>Egység Ár</th>
            <th>Mennyiség</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td>
                <form asp-controller="NewProduct" asp-action="DeleteProduct" method="post">
                    <button type="submit" class="btn btn-default" value="@product.Id" name="productId">Törlés</button>
                </form>
            </td>
            <td>@product.Name</td>
            <td>@product.SupplierName</td>
            <td>@product.UnitPrice</td>
            <td>@product.Quantity</td>
        </tr>
        }
    </tbody>
</table>

